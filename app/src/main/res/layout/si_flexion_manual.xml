<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.itcr.eecc.eecc.Flexion">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="3.14">


                    <GridLayout
                        android:rowCount="4"
                        android:columnCount="5"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#009284"
                        android:gravity="center">

                        <ImageView
                            android:src="@drawable/ial_1"
                            android:layout_rowSpan="2"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_width="62dp"
                            android:layout_height="37dp" />


                        <TextView android:text="Cercos"
                            android:layout_columnSpan="3"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:layout_width="202dp"
                            android:textColor="@color/white"
                            android:textStyle="normal|bold"/>

                        <TextView android:text="Sin cercos"
                            android:layout_rowSpan="2"
                            android:layout_margin="1dp"
                            android:layout_width="76dp"
                            android:gravity="center"
                            android:layout_height="37dp"
                            android:textColor="@color/white"
                            android:textStyle="normal|bold"/>

                        <ImageView
                            android:src="@drawable/ial_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:background="@color/white"
                            android:textColor="@color/white"
                            android:textStyle="normal|italic"/>
                        <ImageView
                            android:src="@drawable/ial_3"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:textColor="@color/white"
                            android:textStyle="normal|italic"
                            android:layout_margin="1dp" />
                        <ImageView
                            android:src="@drawable/ial_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:textColor="@color/white"
                            android:textStyle="normal|italic"
                            android:layout_margin="1dp" />

                        <TextView android:text="&gt; 8 mm"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/white"
                            android:textStyle="normal|italic"
                            android:layout_margin="1dp"
                            android:layout_width="62dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:layout_height="36dp" />
                        <TextView android:text="1"
                            android:layout_width="71dp"
                            android:layout_height="36dp"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial11" />
                        <TextView android:text="1"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_height="36dp"
                            android:layout_width="64dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial12" />
                        <TextView android:text="2"
                            android:layout_width="61dp"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial13" />
                        <TextView android:text="1"
                            android:layout_rowSpan="2"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_width="76dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial14"
                            android:layout_height="74dp" />

                        <TextView android:text="&lt;= 8 mm"
                            android:layout_height="36dp"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/white"
                            android:textStyle="normal|italic"
                            android:layout_margin="1dp"
                            android:layout_width="62dp"
                            android:gravity="center"/>
                        <TextView android:text="2"
                            android:layout_width="71dp"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial21" />
                        <TextView android:text="2"
                            android:layout_width="64dp"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial22" />
                        <TextView android:text="3"
                            android:layout_width="61dp"
                            android:background="#FFFF"
                            android:layout_margin="1dp"
                            android:layout_height="36dp"
                            android:gravity="center"
                            android:onClick="setLongitudinal"
                            android:id="@+id/ial23" />


                    </GridLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <Button
                            android:text="@string/button_cancel"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonCancel"
                            android:layout_width="170dp"
                            android:layout_alignBaseline="@+id/buttonLongitudinal"
                            android:layout_alignBottom="@+id/buttonLongitudinal"
                            android:layout_toEndOf="@+id/buttonLongitudinal"
                            android:layout_marginStart="20dp"
                            android:padding="20dp"
                            android:textColor="@color/black"/>

                        <Button
                            android:text="@string/button_next"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonLongitudinal"
                            android:layout_below="@+id/longitudinalIndex"
                            android:layout_marginTop="60dp"
                            android:layout_marginStart="16dp"
                            android:layout_alignParentStart="true"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="36dp"
                            android:id="@+id/longitudinalIndex"
                            android:layout_marginStart="25dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/buttonCancel" />

                        <TextView
                            android:text="Índice Armado Longitudinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/buttonCancel" />

                    </RelativeLayout>

        </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <!--include android:id="@+id/toolbar" layout="@layout/toolbar" /-->

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>