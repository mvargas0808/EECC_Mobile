<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLogin"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPassword" >
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Resultado"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewPassword"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textEmailAddress" >
    <requestFocus/>
    </EditText>

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="@string/text_password"
        android:layout_above="@+id/inputPassword"
        android:layout_alignStart="@+id/inputPassword" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_username"
        android:layout_above="@+id/inputUsername"
        android:layout_alignStart="@+id/textViewPassword" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_login"
        android:layout_marginBottom="134dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/inputPassword"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@+id/textViewPassword" />

</RelativeLayout>